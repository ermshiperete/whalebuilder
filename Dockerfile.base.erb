FROM <%= @distribution %>:<%= @tag %>
MAINTAINER <%= @maintainer %>

RUN groupadd -r whalebuilder && useradd -r -g whalebuilder -d /home/whalebuilder -m whalebuilder
WORKDIR /home/whalebuilder

<% if @repository %>RUN sed -i "s/http:\\/\\/http.debian.net\\/debian/<%= @repository.gsub(/\//, "\\\\/") %>/" /etc/apt/sources.list

<% end %>RUN apt-get update && apt-get install -y build-essential
